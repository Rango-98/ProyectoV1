<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoapp"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btnSesion2"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="201dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="sans-serif-black"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSesion"
        app:strokeColor="#00FF3030" />

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="59dp"
        android:background="#34FFFFFF"
        android:drawableStart="@drawable/persona"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="  Usuario"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="424dp"
        android:layout_height="227dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            tools:srcCompat="@drawable/tony" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtContrasena"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="59dp"
        android:background="#34FFFFFF"
        android:drawableStart="@drawable/bloquear"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="  Contraseña"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtUsuario" />

    <Button
        android:id="@+id/btnSesion"
        android:layout_width="201dp"
        android:layout_height="49dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="114dp"
        android:backgroundTint="#FF3030"
        android:fontFamily="sans-serif-black"
        android:text="Iniciar Sesión"
        android:textSize="18dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtContrasena" />

</androidx.constraintlayout.widget.ConstraintLayout>