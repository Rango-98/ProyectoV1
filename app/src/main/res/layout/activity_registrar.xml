<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarActivity">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="467dp"
      android:layout_height="307dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.77"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/registro" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="match_parent"
      android:layout_height="178dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      android:src="@drawable/tony" />

  <EditText
      android:id="@+id/edtCorreo"
      android:layout_width="336dp"
      android:layout_height="62dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="40dp"
      android:drawableStart="@drawable/persona"
      android:ems="10"
      android:hint=" Nombre del usuario"
      android:inputType="textEmailAddress"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="179dp"
      android:layout_height="32dp"
      android:layout_marginStart="119dp"
      android:layout_marginTop="11dp"
      android:layout_marginEnd="118dp"
      android:fontFamily="sans-serif-black"
      android:text="Registrar usuario"
      android:textAlignment="center"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <EditText
      android:id="@+id/editTextTextEmailAddress2"
      android:layout_width="336dp"
      android:layout_height="62dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="40dp"
      android:drawableStart="@drawable/email"
      android:ems="10"
      android:hint=" Correo electronico"
      android:inputType="textEmailAddress"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtCorreo" />

  <EditText
      android:id="@+id/edtContrasena2"
      android:layout_width="336dp"
      android:layout_height="62dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="40dp"
      android:drawableStart="@drawable/bloquear"
      android:ems="10"
      android:hint=" ContraseÃ±a"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2" />

  <Button
      android:id="@+id/btnSesion"
      android:layout_width="201dp"
      android:layout_height="49dp"
      android:layout_marginStart="114dp"
      android:layout_marginTop="58dp"
      android:layout_marginEnd="114dp"
      android:backgroundTint="#FF3030"
      android:fontFamily="sans-serif-black"
      android:text="Registrarse"
      android:textSize="18dp"
      app:cornerRadius="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtContrasena2" />

</androidx.constraintlayout.widget.ConstraintLayout>